@model MetekLisansApp.Models.Menu
@{
    ViewData["Title"] = "Menu Ekle";
}

<h2>Menu Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Ad">Menu Adı</label>
        <input type="text" class="form-control" name="Ad" required />
    </div>
    <div class="form-group">
        <label for="SiraNo">Sıra No</label>
        <input type="number" class="form-control" name="SiraNo" required />
    </div>
    <button type="submit" class="btn btn-primary">Menu Ekle</button>
</form>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="text-danger">@error.ErrorMessage</div>
}

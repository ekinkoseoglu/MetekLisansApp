@model MetekLisansApp.Models.Entities.Menu
@{
    ViewData["Title"] = "Menu Ekle";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem 0;
        }

        .license-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
            padding: 2rem;
        }

        .form-control {
            height: 50px;
            border-radius: 10px;
            padding-left: 45px;
        }

            .form-control:focus {
                border-color: #7c4dff;
                box-shadow: 0 0 0 3px rgba(124, 77, 255, 0.25);
            }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            z-index: 5;
        }

        .btn-primary {
            background: #7c4dff;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            padding: 12px 30px;
        }

            .btn-primary:hover {
                background: #663dff;
                transform: translateY(-2px);
            }

        .btn-info {
            background: #17a2b8;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            padding: 12px 30px;
            color: #fff;
        }

            .btn-info:hover {
                background: #138496;
                transform: translateY(-2px);
            }

        .mb-4 {
            margin-bottom: 1.5rem;
        }

        .position-relative {
            position: relative;
        }

        .text-center {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="license-card">
                    <div class="text-center mb-5">
                        <h2 class="fw-bold mb-3">Menü Ekleme</h2>
                    </div>
                    <form asp-action="Create" method="post">
                        <div class="mb-4 position-relative">
                            <input type="text" class="form-control" placeholder="Ad" name="Ad" required />
                        </div>
                        <div class="mb-4 position-relative">
                            <input type="number" class="form-control" placeholder="Sıra No" name="SiraNo" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            Menu Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="text-danger">@error.ErrorMessage</div>
}

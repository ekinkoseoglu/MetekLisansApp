@{
    ViewData["Title"] = "Firma Listesi";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem 0;
        }

        .history-card {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        .custom-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 8px;
        }

            .custom-table thead th {
                background: #7c4dff;
                color: white;
                padding: 1rem;
                border: none;
                position: sticky;
                top: 0;
            }

            .custom-table tbody tr {
                background: white;
                transition: all 0.3s ease;
                border-radius: 10px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            }

            .custom-table td {
                padding: 1rem;
                vertical-align: middle;
                border-top: none;
                border-bottom: none;
            }

        .btn-renew {
            background: #ffc107;
            border: none;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-renew:hover {
                background: #e0a800;
                transform: scale(1.05);
            }

        .mb-3 {
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="mb-3">
            <a href="/Firma/Create" class="btn btn-info">Yeni Firma Ekle</a>
        </div>
        <div class="history-card">
            <div class="text-center mb-5">
                <h2 class="fw-bold mb-3">Firma Listesi</h2>
                <p class="text-muted">Tüm Firma kayıtları</p>
            </div>
            <div class="table-responsive">
                <table id="firmaTable" class="custom-table">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Firma No</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#firmaTable').DataTable({
                    "responsive": true,
                    "lengthChange": false,
                    "autoWidth": false,
                    "ajax": {
                        "url": "/Firma/Liste",
                        "dataSrc": ""
                    },
                    "columns": [
                        { "data": "ad", "defaultContent": "" },
                        { "data": "kod", "defaultContent": "" },
                       
                        {
                            "data": "id",
                            "render": function (data) {
                                return `<a href="/Firma/Edit/${data}" class="btn btn-renew">Düzenle</a>`;
                            },
                            "orderable": false
                        }
                    ]
                });
            });
        </script>
    }
</body>
</html>

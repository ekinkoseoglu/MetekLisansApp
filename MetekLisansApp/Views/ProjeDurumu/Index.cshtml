@{
    ViewData["Title"] = "Proje Durumu Listesi";
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem 0;
        }

        .history-card {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        .search-container {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .search-input {
            border: 2px solid #dee2e6;
            border-radius: 10px;
            padding: 12px 45px 12px 20px;
            width: 100%;
            transition: all 0.3s ease;
        }

            .search-input:focus {
                border-color: #7c4dff;
                box-shadow: 0 0 0 3px rgba(124, 77, 255, 0.25);
            }

        .custom-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 8px;
        }

            .custom-table thead th {
                background: #7c4dff;
                color: white;
                padding: 1rem;
                border: none;
                position: sticky;
                top: 0;
            }

            .custom-table tbody tr {
                background: white;
                transition: all 0.3s ease;
                border-radius: 10px;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            }

            .custom-table td {
                padding: 1rem;
                vertical-align: middle;
                border-top: none;
                border-bottom: none;
            }

        .no-results {
            text-align: center;
            padding: 2rem;
            color: #6c757d;
            display: none;
        }

        .btn-renew {
            background: #ffc107;
            border: none;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-renew:hover {
                background: #e0a800;
                transform: scale(1.05);
            }
    </style>
</head>

<body>
    <div class="container">
        <div class="history-card">
            <div class="text-center mb-5">
                <h2 class="fw-bold mb-3">Proje Durumu Listesi</h2>
                <p class="text-muted">Tüm proje durum kayıtları</p>
            </div>

            <div class="table-responsive">
                <table id="projeDurumTable" class="custom-table">
                    <thead>
                        <tr>
                            <th>Firma Adı</th>
                            <th>Statü</th>
                            <th>Mevcut Lisans Tarihi</th>
                            <th>Lisans Atansın mı?</th>
                            <th>Lisans Süresi</th>
                            <th>Bakım Anlaşması</th>
                            <th>Bakım Paketi</th>
                            <th>Bakım Söz. Bitiş</th>
                            <th>Sahip</th>
                            <th>Notlar</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

        <script>
            $(document).ready(function () {
                $('#projeDurumTable').DataTable({
                    "responsive": true,
                    "lengthChange": false,
                    "autoWidth": false,
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json"
                    },
                    "ajax": {
                        "url": "/ProjeDurumu/Liste", 
                        "dataSrc": ""
                    },
                    "columns": [
                        {
                            "data": "firma.ad",
                            "defaultContent": ""
                        },
                        {
                            "data": "statu.ad",
                            "defaultContent": ""
                        },
                        {
                            "data": "mevcutLisans",
                            "render": function (data) {
                                return new Date(data).toLocaleDateString('tr-TR');
                            }
                        },
                        {
                            "data": "lisansAtansinmi",
                            "render": function (data) {
                                return data ? "Evet" : "Hayır";
                            }
                        },
                        {
                            "data": "lisansSure.ad",
                            "defaultContent": ""
                        },
                        {
                            "data": "bakimAnlasmasi.ad",
                            "defaultContent": ""
                        },
                        {
                            "data": "bakimPaketi.ad",
                            "defaultContent": ""
                        },
                        {
                            "data": "bakimSozlesmeBitisTarihi",
                            "render": function (data) {
                                return new Date(data).toLocaleDateString('tr-TR');
                            }
                        },
                        {
                            "data": "sahip.ad",
                            "defaultContent": ""
                        },
                        {
                            "data": "notlar",
                            "render": function (data) {
                                return data || '';
                            }
                        },
                        {
                            "data": "id",
                            "render": function (data) {
                                return `<a href="/ProjeDurumu/Edit/${data}" class="btn btn-renew">Düzenle</a>`;
                            },
                            "orderable": false
                        }
                    ]
                   
                });
            });
        </script>
    }
</body>
</html>
@model MetekLisansApp.Models.Ekran
@{
    ViewData["Title"] = "Ekran Ekle";
    var menuler = ViewData["Menuler"] as List<MetekLisansApp.Models.Menu>;
}

<h2>Ekran Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Ad">Ekran Adı</label>
        <input type="text" class="form-control" name="Ad" required />
    </div>
    <div class="form-group">
        <label for="EkranNo">Ekran No</label>
        <input type="number" class="form-control" name="EkranNo" required />
    </div>
    <div class="form-group">
        <label for="MenuId">Hangi Menüye Ait?</label>
        <select class="form-control" name="MenuId" required>
            <option value="">Menü Seçiniz</option>
            @foreach (var menu in menuler)
            {
                <option value="@menu.Id">@menu.Ad</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Ekran Ekle</button>
</form>

@foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <div class="text-danger">@error.ErrorMessage</div>
}
